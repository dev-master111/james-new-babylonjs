{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true
    },
    "lib": [
        "es2018"
    ],
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "./src/**/*"
    ]
}
